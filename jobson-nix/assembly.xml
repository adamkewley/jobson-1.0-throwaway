<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>dist</id>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${project.build.finalName}</baseDirectory>

    <formats>
        <format>tar.gz</format>
    </formats>

    <!-- Copy top-level executable script into bin/ in tarball -->
    <files>
        <file>
            <source>src/jobson</source>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0554</fileMode>
            <filtered>true</filtered>
        </file>
    </files>

    <!-- Copy java dependencies into share/java/ in tarball -->
    <dependencySets>
        <!-- Unpack jars into jar directory -->
        <dependencySet>
            <outputDirectory>share/java</outputDirectory>
            <excludes>
                <!-- The documentation is unpacked elsewhere -->
                <exclude>com.github.jobson:jobson-docs</exclude>
                <!-- The UI is unpacked elsewhere -->
                <exclude>com.github.jobson:jobson-ui</exclude>
            </excludes>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>compile</scope>
        </dependencySet>

        <!-- Unpack docs into doc directory -->
        <dependencySet>
            <outputDirectory>share/doc/jobson/html</outputDirectory>
            <includes>
                <include>com.github.jobson:jobson-docs</include>
            </includes>
            <unpack>true</unpack>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <!-- Unpack UI into jobson share dir -->
        <dependencySet>
            <outputDirectory>share/jobson/ui/html</outputDirectory>
            <includes>
                <include>com.github.jobson:jobson-ui</include>
            </includes>
            <unpack>true</unpack>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>